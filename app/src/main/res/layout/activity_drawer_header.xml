<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLightColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Hidden Header Section -->
        <LinearLayout
            android:id="@+id/hiddenHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/hiddenHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Your Profile"
                android:fontFamily="@font/fonts_text"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/hiddenHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Profile Picture -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/drawerProfilePic"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:contentDescription="Profile Picture"
            android:padding="8dp"
            android:src="@drawable/profileblack"
            style="@style/CustomCircleImage" />

        <!-- Name -->
        <TextView
            android:id="@+id/drawerUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Hey, User!"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:id="@+id/drawerUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="user@example.com"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- Contact -->
        <TextView
            android:id="@+id/drawerUserContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/_91_mobile_number"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- Update Profile Button -->
        <Button
            android:id="@+id/updateProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/primaryLightColor"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Logout"
            android:backgroundTint="@color/text_primary_light"
            android:textColor="@android:color/white"
            android:padding="12dp"
            app:cornerRadius="12dp" />

        <!-- Delete Account Button -->
        <Button
            android:id="@+id/deleteAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Delete Account"
            android:backgroundTint="@color/text_primary_light"
            android:textColor="@android:color/white"
            android:padding="12dp"
            app:cornerRadius="12dp" />

        <!-- Connect With Us Section -->
        <LinearLayout
            android:id="@+id/connectWithUsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_background"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/connectWithUsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect With Us"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp" />

            <!-- Social Media Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Instagram -->
                <ImageView
                    android:id="@+id/instagramButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/instagram"
                    android:contentDescription="Instagram"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:scaleType="centerInside" />

                <!-- Facebook -->
                <ImageView
                    android:id="@+id/facebookButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/fb"
                    android:contentDescription="Facebook"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="3dp"
                    android:scaleType="centerInside" />

                <!-- YouTube -->
                <ImageView
                    android:id="@+id/youtubeButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/youtube"
                    android:contentDescription="YouTube"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:scaleType="centerInside" />

                <!-- WhatsApp -->
                <ImageView
                    android:id="@+id/whatsappButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/whatsapp"
                    android:contentDescription="WhatsApp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
