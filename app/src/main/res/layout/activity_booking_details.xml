<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BookingDetails">

    <!-- Toolbar for Page Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/primaryLightColor"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Your Bookings"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- ScrollView for Booking Details -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/bookingDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Placeholder for "No Bookings" Message -->
            <TextView
                android:id="@+id/noBookingsMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No bookings available...!"
                android:fontFamily="@font/fonts_text"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/text_primary_light"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
