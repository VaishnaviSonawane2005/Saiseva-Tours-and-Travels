<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nashik">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Heading TextView -->
            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:padding="16dp"
                android:text="Shirdi to Nashik"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!-- Muktidham Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="66dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewMuktidham"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Muktidham"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/bhimalocation"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/mukitidham" />

            <!-- Panchawati Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/textViewPanchawati"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Panchawati"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/panchawati" />

            <!-- Trimbakeshwar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView101"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/textViewTrimbakeshwar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Trimbakeshwar"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/trimbak" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/nashikbooknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>