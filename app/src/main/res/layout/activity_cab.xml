<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/saiseva_pnglogo" />

            <TextView
                android:id="@+id/cabHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cabs"
                android:textColor="#000000"
                android:fontFamily="@font/fonts_text"
                android:textSize="22sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/tabsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/outstationCabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="Outstation Cabs"
                android:textColor="#666666"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/airportCabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="Airport Cabs"
                android:textColor="#666666"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/hourlyRentals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="Hourly Rentals"
                android:textColor="#666666"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Instruction -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add stops in between your pickup and drop location"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Trip Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/oneWayRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="One Way"
                android:buttonTint="#FF6600"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/roundTripRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Round Trip"
                android:buttonTint="#FF6600"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Location Inputs -->
        <EditText
            android:id="@+id/pickupLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter pickup location"
            android:drawablePadding="8dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/dropLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter drop location"
            android:drawablePadding="8dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/addStopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add stop"
            android:textColor="#FF6600"
            android:layout_marginTop="8dp" />

        <!-- Pickup Date/Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/pickupDateTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Date/Time:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateTimeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#666666"
                android:text="Fetching..."
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Rental Start Date/Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/rentalStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date/Time:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rentalStartDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#666666"
                android:text="Select"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Rental End Date/Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/rentalEndLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date/Time:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rentalEndDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#666666"
                android:text="Select"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Fetch Location Button -->
        <Button
            android:id="@+id/fetchLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Current Location"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF" />

        <!-- Search Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SAVE"
            android:backgroundTint="#FF6600"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
