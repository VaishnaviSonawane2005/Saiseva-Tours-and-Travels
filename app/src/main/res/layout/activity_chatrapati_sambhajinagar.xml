<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatrapatiSambhajinagar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Heading TextView -->
            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:padding="12dp"
                android:text="Shirdi to Chatrapathi Sambhajinagar"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:textStyle="bold" />

            <!-- Ellora Caves Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/elloralocation"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/elloracaves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Ellora Caves"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Aurangabad Caves Section -->
            <ImageView
                android:id="@+id/ellora"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/kailasa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView111"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/AurangabadCaves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Aurangabad Caves"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/agcave"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/agcave" />

            <!-- Bibi-Ka-Makbara Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView122"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/textViewBkM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Bibi-Ka-Makbara"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/bkm"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/bkm" />

            <!-- Daulatabad Fort Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView112"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/Daulatabadtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Daulatabad Fort"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/Daulatabad"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/dnb" />

            <!-- Khultabad Fort Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView113"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/Khultabadtxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Khultabad Fort"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/khuldabad"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/khuldabad" />

            <!-- Ghrishneshwar Mandir Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView114"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/textViewGhrishneshwarMandir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grishneshwar Jyotiling"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/grishneshwar" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/csnbuttonBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/black"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp" />
        </LinearLayout> <!-- Close LinearLayout -->

    </ScrollView> <!-- Close ScrollView -->

</androidx.constraintlayout.widget.ConstraintLayout>