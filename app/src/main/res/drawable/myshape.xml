<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the rectangle shape -->
    <solid android:color="@color/primaryLightColor" /> <!-- Background color of the shape -->

    <!-- Rounded corners -->
    <corners android:radius="40dp" /> <!-- Adjust the radius to change the curve -->

    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border (stroke) around the shape -->
    <stroke
        android:width="2dp"
        android:color="#9B9B9D" /> <!-- Border color -->
</shape>